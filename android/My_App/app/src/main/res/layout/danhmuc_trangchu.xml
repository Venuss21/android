<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <LinearLayout
        android:background="#fff"
        android:id="@+id/idDanhMuc_trang_chu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="20"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/idCardViewimgDanhMuc_trang_chu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/hinhAnhDanhMuc_trang_chu"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/truyen_tranh_hanh_dong_" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:id="@+id/tenDanhMuc_trang_chu"
            android:textSize="12sp"
            android:textStyle="italic"
            android:text="Hành động" />


    </LinearLayout>

</RelativeLayout>